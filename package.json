{
  "name": "axite-mcp-template",
  "version": "1.0.0",
  "private": false,
  "description": "Production-ready starter template for building ChatGPT MCP apps with Next.js, Better Auth, and optional Stripe subscriptions",
  "keywords": ["mcp", "chatgpt", "openai", "template", "starter", "nextjs", "better-auth", "oauth"],
  "author": "Axite Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/axite-mcp-template"
  },
  "homepage": "https://github.com/yourusername/axite-mcp-template#readme",
  "bugs": {
    "url": "https://github.com/yourusername/axite-mcp-template/issues"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start -H 0.0.0.0",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:schema": "npx @better-auth/cli@latest generate --config lib/auth/index.ts --output lib/db/schema.ts --yes",
    "typecheck": "tsc --noEmit --pretty",
    "typecheck:watch": "tsc --noEmit --watch --pretty",
    "check": "pnpm typecheck && pnpm build",
    "lint": "eslint .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "pnpm test:run && pnpm test:e2e",
    "test:watch": "vitest watch",
    "generate:tool": "tsx scripts/generate-tool.ts",
    "generate:widget": "tsx scripts/generate-widget.ts"
  },
  "dependencies": {
    "@better-auth/core": "^1.4.4",
    "@better-auth/passkey": "^1.4.4",
    "@better-auth/stripe": "^1.4.4",
    "@modelcontextprotocol/sdk": "^1.20.0",
    "@openai/apps-sdk-ui": "^0.2.0",
    "@paralleldrive/cuid2": "^3.0.4",
    "better-auth": "^1.4.4",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.7",
    "drizzle-orm": "^0.44.7",
    "framer-motion": "^12.23.24",
    "ioredis": "^5.8.1",
    "jose": "^6.1.3",
    "lucide-react": "^0.553.0",
    "mcp-handler": "^1.0.2",
    "next": "15.5.4",
    "pg": "^8.16.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-qr-code": "^2.0.18",
    "resend": "^6.4.0",
    "stripe": "^19.3.1",
    "tailwind-merge": "^3.4.0",
    "winston": "^3.18.3",
    "zod": "3.24.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20",
    "@types/pg": "^8.15.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^4.0.9",
    "@vitest/ui": "^4.0.7",
    "eslint": "^9.39.1",
    "eslint-config-next": "16.0.1",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.1.0",
    "msw": "^2.12.0",
    "tailwindcss": "^4",
    "tsx": "^4.20.6",
    "typescript": "^5",
    "vitest": "^4.0.9"
  },
  "packageManager": "pnpm@10.21.0+sha512.da3337267e400fdd3d479a6c68079ac6db01d8ca4f67572083e722775a796788a7a9956613749e000fac20d424b594f7a791a5f4e2e13581c5ef947f26968a40"
}
